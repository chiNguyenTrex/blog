<%= form_with model: genre, local: true do |f| %>
  <%= render "shared/errors", object: f.object %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= f.submit yield(:genre_submit_title), class: "btn btn-success" %>
  </div>
<% end %>
