<h1>New genre</h1>
<%= form_with model: @genre, local: true do |f| %>
  <%= render "shared/errors", object: f.object %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Back", genres_path %>

