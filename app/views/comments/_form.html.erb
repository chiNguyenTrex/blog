<%= form_for [commentable, comment] do |f| %>
  <%= render "shared/errors", object: f.object %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.text_area :content, class: "form-control" %>
        <%= f.submit "Add", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
