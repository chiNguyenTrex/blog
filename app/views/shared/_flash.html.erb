<% unless flash.empty? %>
  <% [:notice, :error, :alert, :success, :danger].each do |level| %>
    <% unless flash[level].blank? %>
      <div id="flash-message" class="alert alert-<%= bootstrap_flash_type level %>">
        <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
        <%= sanitize flash[level] %>
      </div>
    <% end %>
  <% end %>
<% end %>
