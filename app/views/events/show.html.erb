<div>
  <div>
    <%= @event.name %>
  </div>
  <div>
    <%= link_to "Back", events_path %>
  </div>
</div>

<div>
  <hr>
  <%= render "comments/comments", comments: @event.comments %>
</div>

<% if user_signed_in? %>
  <div>
    <hr>
    <%= render "comments/form", commentable: @event, comment: @comment %>
  </div>
<% end %>
